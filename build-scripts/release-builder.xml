<!-- Build script module for recording the release into subversion -->

<project>
  	<import file="version-builder.xml"/>

  	<target name="record-release" depends="stamp-build" if="${bamboo.jira.version}">
  		<fail message="Version mismatch: Jira reports ${bamboo.jira.version} whilst build-data.properties reports ${implementation-short-version}">
  			<not>
		  		<condition property="versions.match">
		  		    <equals arg1="${bamboo.jira.version}" arg2="${implementation-short-version}"/>
		  		</condition>
  			</not>
  		</fail>
  		
  		<echo message="Stamp as ${bamboo.jira.version}" />
  	</target>
</project>